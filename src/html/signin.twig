{% extends "../templates/layout.twig" %}

{% block content %}
<div class="signin">
    <div class="container-fluid">
        <header class="navbar d-flex justify-content-between">
            <img src="/img/logo.svg" onload="SVGInject(this)" alt="Greenbudget Logo">
            <nav>
                <a href="signup.html">Sign Up</a>
            </nav>
        </header>
    </div>

    <div class="container">
        <form>
            <div class="header">
                <h1 class="mb-8">Sign In.</h1>
            </div>

            <div class="form-group">
                <label for="emailAddress">Email</label>
                <input type="email" class="form-control" id="emailAddress" aria-describedby="emailHelp">
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password">
                <a href="#" class="forgot-password d-block mt-2">Forgot Password?</a>
            </div>

            <button type="submit" class="btn btn-dark btn-lg btn-block mt-9">Continue</button>

            <div class="google d-flex justify-content-center align-items-center">
                <img src="/img/icons/google.svg" onload="SVGInject(this)" alt="Sign in with Google">
                <span>Sign in with Google</span>
            </div>

        </form>

        <div class="footer">
            <p>Don't have an account?</p>
            <a href="signup.html">Sign Up</a>
        </div>
    </div>
</div>
{% endblock %}
