{% extends "../templates/layout.twig" %}

{% block content %}
<div class="wrapper">

    {% include "../templates/partials/sidebar.twig" %}

    <!-- Page Content  -->
    <div id="content" class="new-project">
        {% include "../templates/partials/navbar-basic.twig" %}

        <div class="container">
            <form class="needs-validation" novalidate>
                <h1 class="header">Production Info</h1>
                <div class="form-row">
                    <div class="col-xl-8 pr-xl-3">
                        <div class="form-group row">
                            <label for="productionCompany" class="col-lg-4 col-xxl-3 col-form-label">Production Company:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control w-75" id="productionCompany" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="address" class="col-lg-4 col-xxl-3 col-form-label">Address:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control" id="address" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="email" class="col-lg-4 col-xxl-3 col-form-label">Email:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="email" class="form-control w-75" id="email" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="phone" class="col-lg-4 col-xxl-3 col-form-label">Phone:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="tel" class="form-control w-75" id="phone" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="producer" class="col-lg-4 col-xxl-3 col-form-label">Producer:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control w-75" id="producer" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="director" class="col-lg-4 col-xxl-3 col-form-label">Director:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control w-75" id="director" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="dp" class="col-lg-4 col-xxl-3 col-form-label">Director of Photography:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control w-75" id="dp" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="editor" class="col-lg-4 col-xxl-3 col-form-label">Editor:</label>
                            <div class="col-lg-8 col-xxl-9">
                                <input type="text" class="form-control w-75" id="editor" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-4 pl-xl-4">
                        <div class="form-group row h-100 image-upload">
                            <div class="col-sm-9 col-xl-12 image-upload-alt">
                                <label for="uploadImage">
                                    <img src="img/upload-image-2.svg" alt="Upload an Image" draggable="false">
                                    <p id="emailHelp" class="form-text text-muted">Upload a Logo</p>
                                </label>
                                <input type="file" class="form-control-file" id="uploadImage">
                            </div>
                        </div>
                    </div>

                    <div class="button-group">
                        <a class="btn btn-light btn-border" href="np-project-info.html" role="button">Back</a>
                        {# <a class="btn btn-dark" href="np-client-info.html" role="button">Next</a> #}
                        <button type="submit" class="btn btn-dark">Next</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<div class="overlay"></div>
{% endblock %}
