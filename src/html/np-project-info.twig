{% extends "../templates/layout.twig" %}

{% block content %}
<div class="wrapper">

    {% include "../templates/partials/sidebar.twig" %}

    <!-- Page Content  -->
    <div id="content" class="new-project">
        {% include "../templates/partials/navbar-basic.twig" %}

        <div class="container">
            <form class="needs-validation" novalidate>
                <h1 class="header">Project Info</h1>
                <div class="form-row">
                    <div class="col-xl-6 pr-xl-4">
                        <div class="form-group row">
                            <label for="productionName" class="col-xl-5 col-xxl-3 col-form-label">Production Name:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control" id="productionName" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="projectNumber" class="col-xl-5 col-xxl-3 col-form-label">Project Number:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="projectNumber" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="productionType" class="col-xl-5 col-xxl-3 col-form-label">Production Type:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="productionType" required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="shootingFormat" class="col-xl-5 col-xxl-3 col-form-label">Shooting Format:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="shootingFormat" required>
                            </div>
                        </div>

                        <div class="form-group row image-upload">
                            <div class="col-9 col-xl-7">
                                <label for="uploadImage">
                                    <img src="img/upload-image.svg" alt="Upload an Image">
                                    <p id="emailHelp" class="form-text text-muted">Upload Project Image</p>
                                </label>
                                <input type="file" class="form-control-file" id="uploadImage" required>
                            </div>
                        </div>
                    </div>

                    <div class="col-xl-6 pl-xl-4">
                        <div class="form-group row">
                            <label for="shootDateRange" class="col-xl-5 col-xxl-3 col-form-label">Shoot Dates:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control" id="shootDateRange" placeholder="Select Dates.." data-input required>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="deliveryDate" class="col-xl-5 col-xxl-3 col-form-label">Delivery Date:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control calendar w-50" id="deliveryDate" placeholder="Select Date.." required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="buildDays" class="col-xl-5 col-xxl-3 col-form-label">Build Days:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="buildDays" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="preflightDays" class="col-xl-5 col-xxl-3 col-form-label">Prelight Days:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="preflightDays" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="studioShootDays" class="col-xl-5 col-xxl-3 col-form-label">Studio Shoot Days:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="studioShootDays" required>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="locationDays" class="col-xl-5 col-xxl-3 col-form-label">Location Days:</label>
                            <div class="col-xl-7 col-xxl-9">
                                <input type="text" class="form-control w-50" id="locationDays" required>
                            </div>
                        </div>
                    </div>

                    <div class="button-group">
                        <button type="button" class="btn btn-light btn-border">Cancel</button>
                        {# <a class="btn btn-dark" href="np-production-info.html" role="button">Next</a> #}
                        <button type="submit" class="btn btn-dark">Next</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<div class="overlay"></div>
{% endblock %}
