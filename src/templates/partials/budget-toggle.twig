<div class="btn-group-toggle d-none d-xl-block" data-toggle="buttons">
    <label class="btn btn-border btn-sm active">
        <input type="checkbox" autocomplete="off" checked>
        Estimated
    </label>

    <label class="btn btn-border btn-sm">
        <input type="checkbox" autocomplete="off">
        Running
    </label>

    <label class="btn btn-border btn-sm">
        <input type="checkbox" autocomplete="off">
        Actual
    </label>

    <label class="btn btn-border btn-sm">
        <input type="checkbox" autocomplete="off">
        Details
    </label>
</div>

<div class="dropdown d-block d-xl-none">
    <button class="btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        Options
    </button>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="estimated">
            <label class="form-check-label" for="estimated">
                Estimated
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="running">
            <label class="form-check-label" for="running">
                Running
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="actual">
            <label class="form-check-label" for="actual">
                Actual
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="details">
            <label class="form-check-label" for="details">
                Details
            </label>
        </div>
    </div>
</div>
